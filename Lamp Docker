version: '3.7'
services:
 apache:
  image: php:7.3-apache
  ports:
   - "80:80"
  volumes:
   - ./www:/var/www/html
 db:
  image: mysql:5.7
  ports:
   - "3306:3306"
  command: --default-authentication-plugin=mysql_native_password
  volumes:
   - ./mysql:/var/lib/mysql
  restart: unless-stopped
  environment:
   MYSQL_ROOT_PASSWORD: 12345
   MYSQL_DATABASE: app
   MYSQL_USER: pepe
   MYSQL_PASSWORD: 12345
